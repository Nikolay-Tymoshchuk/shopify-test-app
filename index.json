{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "./app/*"
      ]
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "extensions/my-post-purchase-test-extension/src/*.tsx"
  ],
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/**/*.tsx",
    "app/**/*.ts"
  ]
}
